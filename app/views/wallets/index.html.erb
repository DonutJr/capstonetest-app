<div id="tables" class="element_single">
  <div id="accordion" role="tablist" aria-multiselectable="true">
    <div class="card single-block">
      <div class="card-header" role="tab" id="headingOne">            
        <div class="display-single_element">
          <h3 style="margin: 30px 0">Your Wallets</h3>
            <%= link_to "Add Wallet", "/wallets/new", class: "btn btn-primary"  %>
            <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Wallet Address</th>
                    <th>Eth Balance</th>
                    <th>Eth Position Value</th>
                    <th>Edit/Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @wallets.each do |wallet| %>
                    <tr>
                      <th scope="row"><%=  %></th>
                      <td><%= wallet.address %></td>
                      <td><%= wallet.get_eth_balance %></td>
                      <td><%= wallet.get_eth_balance * @eth.current_price %></td>
                      <td>
                          <div class="btn-group" role="group" aria-label="Basic example">
                          <%= link_to "edit", "/wallets/#{ wallet.id }/edit", class: "btn btn-primary btn-rounded" %><%= link_to "delete", "/wallets/#{ wallet.id }", method: :delete, class: "btn btn-primary btn-rounded" %></td> 
                          </div>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
      </div> <!-- element-content ends -->
    </div>
  </div> <!-- element main container ends -->
</div> <!-- Grid wrapper ends -->

  