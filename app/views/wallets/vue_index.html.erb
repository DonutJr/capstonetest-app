<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<div id="app2">

<div id="tables" class="element_single">
  <div id="accordion" role="tablist" aria-multiselectable="true">
    <div class="card single-block">
      <div class="card-header" role="tab" id="headingOne">            
        <div class="display-single_element">
          <h3 style="margin: 30px 0">Your Wallets</h3>
            <%= link_to "Add Wallet", "/wallets/new", class: "btn btn-primary"  %>
            <input type="" >
            <table class="table table-inverse">
                <thead>
                  <tr>
                    <th>Wallet Address</th>
                    <th>Balance</th>
                    <th>Position Value</th>
                    <th>Edit/Delete</th>
                  </tr>
                </thead>
                <tbody v-for="address in addresses" v-on:click="toggleCoins(address)">
                  <tr>
                    <td>{{ address.address }}</td>
                    <td>{{ address.eth_balance }} ETH</td>
                    <td>{{ address.eth_position_value }}</td>
                  </tr>
                  <tr v-for="coin in address.coins" v-if="address.seen">
                    <td></td>
                    <td>{{ coin.value }} {{ coin.name }}</td>
                    <td>{{ coin.position_value }} </td>
                  </tr>
                </tbody>
              </table>
        </div>
      </div> <!-- element-content ends -->
    </div>
  </div> <!-- element main container ends -->
</div> <!-- Grid wrapper ends -->

</div>




  