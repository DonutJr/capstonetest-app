

<body id="body" class="page-projects boxed-menu">
  <div class="mobile-sticky-header-overlay"></div>


<section class="home-blog">
  <div class="container ">
    <!-- section title -->
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <div class="sectionTitle text-center">
          <h2>Ether and Token Prices</h2>
        </div>
      </div>
    </div>
    <!-- section title ends -->

    <% @coins.each_slice(3) do |coin_slice| %>
      <div class="row">
        <% coin_slice.each do |coin| %> 
          <div class="col-md-4">
            <div class="card card-style3">
              <div class="card_img rocinag">
                <a href="https://bittrex.com/Market/Index?MarketName=ETH-<%= coin.ticker %>" target="_blank"><img class="img-full" data-original="img/logos/<%= coin.id %>.png" alt="Card image"></a> 
              </div>

              <div class="card-block ctnr-border">
                <ul class="">
                  <li><%= coin.ticker %></li>
                  <li><%= coin.name %></li>
                  <li>MktCap: <%= number_to_currency(coin.marketcap) %></li>
                  <li class="card-title"><a href="https://bittrex.com/Market/Index?MarketName=ETH-<%= coin.ticker %>" target="_blank">Price: <%= number_to_currency coin.current_price %></a></li>
                </ul>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

















