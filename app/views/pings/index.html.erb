<br><br><br><br>
<%= form_tag "/users/#{current_user.id}", method: :patch do %>
  <div class="display-single_element text_input container">
    <form >
        <input class="btn btn-primary " type="submit" value="Add Phone Number">
          <input class="form-control col-md-2" type="text" name="phone_number" value="<%=current_user.phone_number %>">
      <div class="form-group row">
      
        
      </div>

    </form>
  </div>
<% end %>


<div id="tables" class="element_single container">
  <div id="accordion" role="tablist" aria-multiselectable="true">
    <div class="card single-block">
      <div class="card-header" role="tab" id="headingOne">            
        <div class="display-single_element">
          <h3 style="margin: 30px 0">Alerts</h3>
            <% if current_user %>
              <%= link_to "Add Alert", "/alerts/new", class: "btn btn-primary"  %>
            <% end %>
              <table class="table table-inverse">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Coin</th>
                    <th>Trigger Price</th>
                    <th>Current Price</th>
                    <th>Triggered?</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @alerts.each do |alert| %>
                    <tr>
                      <th scope="row"><%= alert.id %></th>
                      <td><%= alert.coin.ticker %></td>
                      <td><%= number_to_currency alert.price %></td>
                      <td><%= number_to_currency alert.coin.current_price %></td>
                      <td><%= alert.triggered %></td>
                      <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                        <%= link_to "delete", "/alerts/#{ alert.id }", method: :delete, class: "btn btn-primary btn-rounded" %></td> 
                        </div>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
      </div> <!-- element-content ends -->
    </div>
  </div> <!-- element main container ends -->
</div> <!-- Grid wrapper ends -->
