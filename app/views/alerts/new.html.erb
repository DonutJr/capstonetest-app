<h1 class="">New Alert</h1>
<% if @errors %>
  <div id="error_explanation">
    <h2><%= pluralize(@alert.errors.count, "Error") %> prohibited this alert from being entered</h2>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/alerts", method: :post do %>

  <div class="display-single_element text_input">
    <form >
      <div class="form-group row">
        <label for="example-text-input" class="col-md-2 col-form-label">Ticker</label>
        <div class="dropdown btn-group"> 
          <select name="coin_id" class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <% @coins.each do |coin| %>
                <option value="<%= coin.id %>" class="dropdown-menu dropdown-item" ><%= coin.ticker %></option>
              <% end %>
            </div>
          </select>
        </div>
      </div> 

      <div class="form-group row">
        <label for="example-text-input" class="col-md-2 col-form-label">
        Current Price: <%=  %>
        </label>
      </div>


      <div class="form-group row">
        <label for="example-text-input" class="col-md-2 col-form-label">Alert Price</label>
        <div class="col-md-1">
          <input class="form-control" type="text" name="price">
        </div>
      </div>

      <input type="hidden" name="current_price" value="" />


      <input class="btn btn-primary" type="submit" value="Add Alert">
    </form>
  </div>

  <% end %>

